{
    "compilerOptions": {
        "module": "esnext",
        "lib": [
            "dom",
            "es2018"
        ],
        "target": "es2018",
        "moduleResolution": "Node",
        "outDir": "dist",
        "baseUrl": "src/",
        "paths": {
            "@/*": ["./*"]
        },
        "sourceMap": true,
        "strict": true,
        "experimentalDecorators": true,
        "noImplicitReturns": true,
        "allowSyntheticDefaultImports": true,
        "allowUnreachableCode": false,
        "removeComments": true
    },
    "exclude": [
        "node_modules"
    ]
}
